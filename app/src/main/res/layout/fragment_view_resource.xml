<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resource.viewResource.ViewResourceView">


    <include
        android:id="@+id/include10"
        layout="@layout/actionbar_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/container_view_resource"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/redondvx"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile_view_resource"
                        android:layout_width="@dimen/with_img_profile"
                        android:layout_height="@dimen/height_img_profile"

                        android:layout_marginTop="24dp"
                        android:src="@drawable/ic_picture_resource"
                        app:border_color="@android:color/white"
                        app:border_width="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_name_resource_view_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Miguel Betancourt Cravioto "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_profile_view_resource" />

                    <TextView
                        android:id="@+id/tv_email_view_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="m_btncourt@correo.com.mx "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name_resource_view_resource" />

                    <TextView
                        android:id="@+id/tv_profile_resource_view_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Senior Java "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_email_view_profile" />

                    <HorizontalScrollView
                        android:id="@+id/scroll_profile_view_resource"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_profile_resource_view_resource">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/button5"
                                android:layout_width="73dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginRight="8dp"

                                android:layout_weight="1"
                                android:background="@drawable/back_button_perfil"
                                android:text="Sr. java"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimaryDark" />

                            <Button
                                android:id="@+id/button6"
                                android:layout_width="72dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginEnd="1dp"

                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_button_perfil"

                                android:text="PHP"
                                android:textColor="@color/colorPrimaryDark" />

                            <Button
                                android:id="@+id/button8"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginEnd="1dp"


                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_button_perfil"


                                android:text="Android"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimaryDark" />

                            <Button
                                android:id="@+id/button7"
                                android:layout_width="66dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginEnd="1dp"


                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/back_button_perfil"


                                android:text="+2"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimaryDark" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/tx_view_phone_view_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:text="TelÃ©fono"
                        app:layout_constraintStart_toStartOf="@+id/scroll_profile_view_resource"
                        app:layout_constraintTop_toBottomOf="@+id/scroll_profile_view_resource" />

                    <TextView
                        android:id="@+id/tv_view_ref_tel_view_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Referencia tel"
                        app:layout_constraintStart_toStartOf="@+id/tx_view_phone_view_resource"
                        app:layout_constraintTop_toBottomOf="@+id/tx_view_phone_view_resource" />

                    <TextView
                        android:id="@+id/tv_number_phone_view_resource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="55 1132 3512 "
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/tx_view_phone"
                        app:layout_constraintEnd_toEndOf="@+id/srollPerfilDetailsPurse"
                        app:layout_constraintStart_toStartOf="@+id/tv_number_phone_ref_view_resource"
                        app:layout_constraintTop_toTopOf="@+id/tx_view_phone_view_resource" />

                    <TextView
                        android:id="@+id/tv_number_phone_ref_view_resource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="64dp"
                        android:text="55 9172 8363 "
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/txtViewRefPhoneDetailsPurse"
                        app:layout_constraintEnd_toEndOf="@+id/srollPerfilDetailsPurse"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/tv_view_ref_tel_view_resource"
                        app:layout_constraintTop_toTopOf="@+id/tv_view_ref_tel_view_resource"
                        app:layout_constraintVertical_bias="0.0" />

                    <Button
                        android:id="@+id/btn_see_more_view_resource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/redondvx"
                        android:text="@string/text_btn_see_more_view_resource"
                        android:theme="@style/RaisedButtonDarkCancel"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_number_phone_ref_view_resource" />

                    <Button
                        android:id="@+id/btn_see_interview_view_resource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/redondvx"
                        android:text="@string/text_btn_see_interview_view_resource"
                        android:theme="@style/RaisedButtonDark"
                        app:layout_constraintEnd_toEndOf="@+id/btn_see_more_view_resource"
                        app:layout_constraintStart_toStartOf="@+id/btn_see_more_view_resource"
                        app:layout_constraintTop_toBottomOf="@+id/btn_see_more_view_resource" />

                    <Button
                        android:id="@+id/btn_new_filter_view_resource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/redondvx"
                        android:text="@string/btn_new_filter_view_resource"
                        android:theme="@style/RaisedButtonDark"
                        app:layout_constraintEnd_toEndOf="@+id/btn_see_interview_view_resource"
                        app:layout_constraintStart_toStartOf="@+id/btn_see_interview_view_resource"
                        app:layout_constraintTop_toBottomOf="@+id/btn_see_interview_view_resource" />

                    <Button
                        android:id="@+id/btn_schedule_interview_view_resource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/redondvx"
                        android:text="@string/text_btn_schedule_interview_view_resource"
                        android:theme="@style/RaisedButtonDark"
                        app:layout_constraintEnd_toEndOf="@+id/btn_new_filter_view_resource"
                        app:layout_constraintStart_toStartOf="@+id/btn_new_filter_view_resource"
                        app:layout_constraintTop_toBottomOf="@+id/btn_new_filter_view_resource" />

                    <Button
                        android:id="@+id/btn_evaluations_view_resource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/redondvx"
                        android:text="@string/text_btn_evaluations_view_resource"
                        android:theme="@style/RaisedButtonDark"
                        app:layout_constraintEnd_toEndOf="@+id/btn_register_evaluation_view_resource"
                        app:layout_constraintStart_toStartOf="@+id/btn_register_evaluation_view_resource"
                        app:layout_constraintTop_toBottomOf="@+id/btn_register_evaluation_view_resource" />

                    <Button
                        android:id="@+id/btn_to_acept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_btn_to_acept"
                        android:theme="@style/RaisedButtonDark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/btn_evaluations_view_resource"
                        app:layout_constraintStart_toStartOf="@+id/guideline28"
                        app:layout_constraintTop_toBottomOf="@+id/btn_evaluations_view_resource" />

                    <Button
                        android:id="@+id/btn_register_evaluation_view_resource"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/redondvx"
                        android:text="@string/text_btn_register_evaluation_view_resource"
                        android:theme="@style/RaisedButtonDark"
                        app:layout_constraintEnd_toEndOf="@+id/btn_schedule_interview_view_resource"
                        app:layout_constraintStart_toStartOf="@+id/btn_schedule_interview_view_resource"
                        app:layout_constraintTop_toBottomOf="@+id/btn_schedule_interview_view_resource" />

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_btn_cancel"
                        android:theme="@style/RaisedButtonDarkCancel"
                        app:layout_constraintEnd_toStartOf="@+id/guideline28"
                        app:layout_constraintStart_toStartOf="@+id/btn_evaluations_view_resource"
                        app:layout_constraintTop_toBottomOf="@+id/btn_evaluations_view_resource" />

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>