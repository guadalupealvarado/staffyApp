<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_details_fracment_postulant"
            android:layout_width="94dp"
            android:layout_height="85dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_picture_resource"
            app:border_color="@android:color/white"
            app:border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_1_card_Retro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Miguel Betancourt Cravioto"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_profile_details_fracment_postulant"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_2_card_Retro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Retro"
            app:layout_constraintStart_toEndOf="@+id/img_profile_details_fracment_postulant"
            app:layout_constraintTop_toBottomOf="@+id/txt_1_card_Retro" />

        <TextView


            android:id="@+id/txt_3_card_Retro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="01/05/2018 "
            app:layout_constraintStart_toEndOf="@+id/txt_2_card_Retro"
            app:layout_constraintTop_toBottomOf="@+id/txt_1_card_Retro" />

        <TextView
            android:id="@+id/txt_4_card_Retro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Promedio"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_3_card_Retro"
            app:layout_constraintTop_toBottomOf="@+id/txt_1_card_Retro" />

        <TextView
            android:id="@+id/txt_5_card_Retro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Periodo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_profile_details_fracment_postulant"
            app:layout_constraintTop_toBottomOf="@+id/txt_2_card_Retro" />

        <TextView
            android:id="@+id/txt_6_card_Retro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="abr - sep 2018"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_5_card_Retro"
            app:layout_constraintTop_toBottomOf="@+id/txt_3_card_Retro" />

        <Button
            android:id="@+id/btn_so"
            android:layout_width="61dp"
            android:layout_height="37dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="SO"
            android:theme="@style/RaisedButtonDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_6_card_Retro"
            app:layout_constraintTop_toBottomOf="@+id/txt_4_card_Retro"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>