<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartview_postulant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/white"
    app:cardCornerRadius="14dp"
    tools:context=".ui.postulant.CardViewPostulant">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/listpostulant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_details_fracment_postulant"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_picture_resource"
            app:border_color="@android:color/white"
            app:border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tx_perfil_fracment_postulant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Senior en java, PHP "
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_profile_details_fracment_postulant"
            app:layout_constraintTop_toBottomOf="@+id/tx_nombre_fracment_postulant" />

        <Switch
            android:id="@+id/switch_fracment_postulant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tx_perfil_fracment_postulant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tx_nombre_fracment_postulant"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/horizontal_progress_bar_fracment_postulant"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:max="150"
            android:minHeight="0dp"
            android:progress="50"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tx_perfil_fracment_postulant"
            app:layout_constraintTop_toBottomOf="@+id/tx_estatus_fracment_postulant"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tx_estatus_fracment_postulant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="En filtro"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tx_perfil_fracment_postulant"
            app:layout_constraintTop_toBottomOf="@+id/tx_perfil_fracment_postulant" />

        <TextView
            android:id="@+id/tx_nombre_fracment_postulant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Miguel Betancourt Cravioto"
            android:textColor="@color/colorLabels"
            app:layout_constraintStart_toEndOf="@+id/img_profile_details_fracment_postulant"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>