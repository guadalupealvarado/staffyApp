<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/maskgroup"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/header_left_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Imagen de Profile -->
    <ImageView
        android:id="@+id/circle_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_staffy"
        />

    <!-- borde
    app:border_color="@android:color/white"
        app:border_width="0dp"
    -->

    <!-- Nombre de Usuario -->
    <TextView
        android:id="@+id/usernameNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Martha"
        android:textColor="@color/bb_inActiveBottomBarItemColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold" />

    <!-- Correo de la cuenta -->
    <TextView
        android:id="@+id/txt_email_navigation"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="martha@praxis.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:clickable="true"
        android:textColor="@color/bb_inActiveBottomBarItemColor" />

</LinearLayout>